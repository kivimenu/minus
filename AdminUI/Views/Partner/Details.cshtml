@model AdminUI.Models.PartnerViewModel

<div>
    <h4>PartnerViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssociateName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssociateName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssociateUrl)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssociateUrl)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssociateAddress)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AssociateAddress)
        </dd>
    </dl>
    <button type="button" class="btn btn-info" data-toggle="collapse" data-target="#product-categories">Products</button>
    <div id="product-categories" class="collapse">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductCategories.FirstOrDefault().Name)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ProductCategories)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditCategory", "Product", new { id = item.Id }) |
                            @Html.ActionLink("Details", "ListProducts", "Product", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "DeleteCategory", "Product", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { /* id = Model.PrimaryKey */ }) |
