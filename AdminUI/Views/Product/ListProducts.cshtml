@model IEnumerable<AdminUI.Models.ProductViewModel>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Products</h3>

        <div class="card-tools">
            <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                <i class="fas fa-minus"></i>
            </button>
            <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
    <div class="card-body">
        <p>
            <a asp-action="CreateProduct" asp-route-id="@ViewData["categoryId"]">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsInStock)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.TotalProductVolume)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ProductVolumeUnit)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UnitPrice)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoryId)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsInStock)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalProductVolume)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ProductVolumeUnit)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnitPrice)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryId)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "EditProduct", new { id=item.Id }) |
                            @Html.ActionLink("Details", "ProductDetails", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "DeleteProduct", new { id=item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
        <a asp-action="Index">Back to List</a>
    </div>
    <!-- /.card-footer-->
</div>

